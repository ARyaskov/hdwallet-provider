{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declarationMap": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "outDir": "dist/",
    "rootDir": "src/"
  },
  "include": [
    "src/types/*.d.ts",
    "src/*.ts",
    "src/**/*.ts"
  ]
}
